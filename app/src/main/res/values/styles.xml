<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/primary_button_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/primary_button1_text_selector</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ErrorStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/uiv3_error_red</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlNormal">@color/login_fields_color</item>
        <item name="android:textColorHint">@color/login_fields_color</item>
    </style>

    <style name="BaseAppTheme.SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@null</item>
        <item name="closeIcon">@drawable/ic_close_grey600_24dp</item>
        <item name="queryHint">@string/search</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="BaseAppTheme.AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="buttonBarNegativeButtonStyle">
            @style/BaseAppTheme.AlertDialogNegativeButtonStyle
        </item>
        <item name="buttonBarPositiveButtonStyle">
            @style/BaseAppTheme.AlertDialogPositiveButtonStyle
        </item>
    </style>

    <style name="BaseAppTheme.AlertDialogNegativeButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorAccent">@color/dark_black</item>
        <item name="android:textColor">@color/dark_black</item>
    </style>

    <style name="BaseAppTheme.AlertDialogPositiveButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="BaseAppTheme.SearchToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="searchViewStyle">@style/BaseAppTheme.SearchViewStyle</item>
        <item name="alertDialogTheme">@style/BaseAppTheme.AlertDialogStyle</item>
    </style>

</resources>
