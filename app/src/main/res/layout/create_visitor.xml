<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layoutCreateVisitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="none">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_small"
                android:theme="@style/TextInputLayoutStyle"
                app:errorTextAppearance="@style/ErrorStyle">

                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:paddingLeft="@dimen/padding_small"
                    android:textColor="@color/uiv3_address_input_color"
                    android:textColorHint="@color/uiv3_secondary_text_color"
                    android:textSize="@dimen/secondary_text_size" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_small"
                android:theme="@style/TextInputLayoutStyle"
                app:errorTextAppearance="@style/ErrorStyle">

                <EditText
                    android:id="@+id/editTextMobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="1234567890"
                    android:ems="10"
                    android:hint="@string/mobileNumber"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:paddingLeft="@dimen/padding_small"
                    android:textColor="@color/uiv3_address_input_color"
                    android:textColorHint="@color/uiv3_secondary_text_color"
                    android:textSize="@dimen/secondary_text_size" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/textVehicleNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_small"
                android:theme="@style/TextInputLayoutStyle"
                app:errorTextAppearance="@style/ErrorStyle">

                <EditText
                    android:id="@+id/editTextVehicleNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/vehicle_no"
                    android:inputType="textPostalAddress"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:textColor="@color/uiv3_address_input_color"
                    android:textColorHint="@color/uiv3_secondary_text_color"
                    android:textSize="@dimen/secondary_text_size" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputFromPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_small"
                android:theme="@style/TextInputLayoutStyle"
                app:errorTextAppearance="@style/ErrorStyle">

                <EditText
                    android:id="@+id/editTextFromPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/from_place"
                    android:inputType="textPostalAddress"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:textColor="@color/uiv3_address_input_color"
                    android:textColorHint="@color/uiv3_secondary_text_color"
                    android:textSize="@dimen/secondary_text_size" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputDestinationPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_small"
                android:theme="@style/TextInputLayoutStyle"
                app:errorTextAppearance="@style/ErrorStyle">

                <EditText
                    android:id="@+id/editTextDestinationPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/dest_place"
                    android:inputType="textPostalAddress"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:textColor="@color/uiv3_address_input_color"
                    android:textColorHint="@color/uiv3_secondary_text_color"
                    android:textSize="@dimen/secondary_text_size" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputInTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_small"
                android:theme="@style/TextInputLayoutStyle"
                app:errorTextAppearance="@style/ErrorStyle">

                <EditText
                    android:id="@+id/editTextInTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/in_time"
                    android:focusable="false"
                    android:inputType="textPostalAddress"
                    android:onClick="onInTimeClick"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:textColor="@color/uiv3_address_input_color"
                    android:textColorHint="@color/uiv3_secondary_text_color"
                    android:textSize="@dimen/secondary_text_size" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputOutTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_small"
                android:theme="@style/TextInputLayoutStyle"
                app:errorTextAppearance="@style/ErrorStyle">

                <EditText
                    android:id="@+id/editTextOutTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/out_time"
                    android:inputType="textPostalAddress"
                    android:onClick="onOutTimeClick"
                    android:focusable="false"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:textColor="@color/uiv3_address_input_color"
                    android:textColorHint="@color/uiv3_secondary_text_color"
                    android:textSize="@dimen/secondary_text_size" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/layoutPic"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginBottom="@dimen/margin_normal"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtViewVisitorPhoto"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:textSize="@dimen/primary_text_size"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtViewVisitorSign"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:textSize="@dimen/primary_text_size"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_12"
                    android:paddingBottom="@dimen/padding_12"
                    android:onClick="onCaptureImageClicked"
                    android:background="@color/colorPrimary"
                    android:textSize="@dimen/primary_text_size"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/upload_visitor_img" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_12"
                    android:paddingBottom="@dimen/padding_12"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:textSize="@dimen/primary_text_size"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="onCaptureSignatureClicked"
                    android:text="@string/upload_visitor_sign" />

            </LinearLayout>

            <Button
                android:id="@+id/txtSaveVisitor"
                style="@style/ButtonPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="onSaveButtonClick"
                android:layout_marginTop="@dimen/margin_normal"
                android:paddingBottom="@dimen/padding_small"
                android:paddingLeft="@dimen/padding_normal"
                android:paddingRight="@dimen/padding_normal"
                android:paddingTop="@dimen/padding_small"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="@dimen/primary_text_size" />

        </LinearLayout>

        <!--<FrameLayout-->
            <!--android:id="@+id/content_frame"-->
            <!--android:layout_width="match_parent"-->
            <!--android:visibility="gone"-->
            <!--android:layout_height="match_parent" />-->

    </LinearLayout>

</ScrollView>
