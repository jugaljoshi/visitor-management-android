<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layoutWorkbookType"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_mini"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTxtWorkBookName"
                android:layout_width="match_parent"
                android:hint="@string/enter_work_book_name"
                android:textColor="@color/primary_text_color"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinnerWorkBookType"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:drawableRight="@drawable/ic_arrow_drop_down_grey600_24dp"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/layoutMandatoryFields"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/padding_small"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginBottom="@dimen/margin_normal"
                android:orientation="vertical"
                android:paddingRight="@dimen/padding_small"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/createWorkBookBtn"
                style="@style/ButtonPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:textAllCaps="false"
                android:onClick="onCreateWorkBookBtnClicked"
                android:text="@string/create"
                android:textColor="@color/white"
                android:textSize="@dimen/large_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/emptyLayoutView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" />
    </LinearLayout>

</ScrollView>